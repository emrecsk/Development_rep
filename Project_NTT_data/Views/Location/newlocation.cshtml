@model Layer.Entity.Entities.Location
@{
    ViewData["Title"] = "newlocation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h1>New Location</h1>
    <form class="form-group-sm" method="post">
        @Html.Label("Location Name")
        @Html.TextBoxFor(x=>x.Loc_Name, new{ @class = "form-control"})
        <br />
        <button class="btn btn-primary">Add</button>
    </form>
</div>