@model Layer.Entity.Entities.Devices
@{
    ViewData["Title"] = "newdevice";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
            <div class="container">
                <h1>New Device</h1>
                <form class="form-group" method="post">
                    @Html.Label("Device Name")
                    @Html.TextBoxFor(x=>x.Device_Name, new{ @class = "form-control"})
                    <br />
                    @Html.Label("Location")
                    @Html.DropDownListFor(x => x.LocationId, (List<SelectListItem>)ViewBag.locations, new { @class = "form-control" })
                    <br />
                    @Html.Label("Types")
                    @Html.DropDownListFor(x => x.TypesId, (List<SelectListItem>)ViewBag.types, new { @class = "form-control" })
                    <br />
                    @Html.Label("Organization")
                    @Html.DropDownListFor(x => x.OrganizationId, (List<SelectListItem>)ViewBag.organizations, new { @class = "form-control" })
                    <br />
                    <div class="margin-bottom">
                        @Html.CheckBoxFor(x=>x.IsActive, true)
                        @Html.Label("Is Active")
                    </div>
                    <br />
                    <button class="btn btn-primary">Add</button>
                </form>
            </div>        